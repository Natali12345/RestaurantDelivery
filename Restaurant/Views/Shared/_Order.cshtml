@using Restaurant;
@using Restaurant.Models;
@model List<OrderTotalModel>;


<div class="tableContainer">

    <div class="eachRow headerRow">
        <div class="cell">Order ID</div>
        <div class="cell">Name</div>
        <div class="cell">Phone</div>
        <div class="cell"> Total Price</div>
    </div>

    @foreach (var item in Model)
    {
        <div class="eachRow">
            <div id="@item.Order.OrderId" class="cell orderId">
                <img class="bottom" src="~/pictures/bottom.png" />
                @item.Order.OrderId
            </div>
            <div class="cell">@item.Order.Name</div>
            <div class="cell">@item.Order.Phone</div>
            <div class="cell">@item.Total</div>
        </div>

        <div class="contentOrder" id="@string.Concat("content", item.Order.OrderId)">
            <div class="orderItemsContainer">
                <div class="eachRowTwo headerRowTwo">
                    <div class="cellTwo">Item ID</div>
                    <div class="cellTwo">Product</div>
                    <div class="cellTwo">Quantity</div>
                    <div class="cellTwo"> Price Per Item</div>
                </div>
                @foreach (var orderItem in @item.Order.OrderItems)
                {
                    <div class="eachRowTwo eachOrderItem">
                        <div class="cellTwo">@orderItem.OrderItemId</div>
                        <div class="cellTwo">@orderItem.Product.ProductName</div>
                        <div class="cellTwo">@orderItem.Quantity</div>
                        <div class="cellTwo">@orderItem.TotalPrice</div>
                    </div>
                }
            </div>
            <div class="buttonsStatus">
                <button onclick="ChangeStatus(@item.Order.OrderId, 'Getorder')" class="buttonStatus" >Get</button>
                <button onclick="ChangeStatus(@item.Order.OrderId, 'Incooking')" class="buttonStatus" >In work</button>
                <button onclick="ChangeStatus(@item.Order.OrderId, 'Delivery')" class="buttonStatus">Delivery</button>
                <button onclick="ChangeStatus(@item.Order.OrderId, 'Done')" class="buttonStatus" >Done</button>
            </div>
        </div>

    }

</div>